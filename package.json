{
  "name": "iframe-worker",
  "version": "0.2.4",
  "description": "A tiny WebWorker polyfill for the file:// protocol",
  "keywords": [
    "webworker",
    "polyfill",
    "iframe"
  ],
  "homepage": "https://github.com/squidfunk/iframe-worker",
  "bugs": {
    "url": "https://github.com/squidfunk/iframe-worker/issues",
    "email": "martin.donath@squidfunk.com"
  },
  "license": "MIT",
  "author": {
    "name": "Martin Donath",
    "email": "martin.donath@squidfunk.com"
  },
  "contributors": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/squidfunk/iframe-worker.git"
  },
  "files": [
    "dist",
    "polyfill"
  ],
  "main": "dist/cjs",
  "module": "dist/esm",
  "scripts": {
    "build": "run-p build:cjs build:esm build:polyfill",
    "build:cjs": "tsc --outDir dist/cjs -m commonjs",
    "build:esm": "tsc --outDir dist/esm -m es2015",
    "build:polyfill": "esbuild --bundle --outfile=polyfill/index.js --minify src/polyfill/index.ts",
    "clean": "rimraf dist polyfill",
    "check": "run-p check:*",
    "check:build": "tsc --noEmit",
    "check:style": "eslint --cache \"src/**/*.ts\"",
    "upgrade": "run-s upgrade:*",
    "upgrade:bump": "ncu --upgrade --filterVersion \"/^\\^/\"",
    "upgrade:install": "npm install",
    "test": "( cd tests; TS_NODE_FILES=1 karma start karma.conf.ts --single-run)",
    "test:watch": "( cd tests; TS_NODE_FILES=1 karma start karma.conf.ts )"
  },
  "devDependencies": {
    "@types/chance": "^1.1.3",
    "@types/jasmine": "^4.0.2",
    "@types/karma": "^6.3.3",
    "@types/node": "^17.0.23",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "chance": "^1.1.8",
    "esbuild": "^0.14.32",
    "eslint": "^8.12.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.3.23",
    "istanbul-instrumenter-loader": "^2.0.0",
    "jasmine": "^4.0.2",
    "jasmine-spec-reporter": "^7.0.0",
    "karma": "^6.3.17",
    "karma-chrome-launcher": "^3.1.1",
    "karma-clear-screen-reporter": "^1.0.0",
    "karma-coverage-istanbul-reporter": "^3.0.3",
    "karma-jasmine": "^4.0.2",
    "karma-sourcemap-loader": "^0.3.8",
    "karma-spec-reporter": "^0.0.33",
    "karma-summary-reporter": "^3.1.1",
    "karma-webpack": "^5.0.0",
    "npm-check-updates": "^12.5.7",
    "npm-run-all": "^4.1.5",
    "project-name-generator": "^2.1.9",
    "rimraf": "^3.0.2",
    "ts-loader": "^9.2.8",
    "ts-node": "^10.7.0",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "tslib": "^2.3.1",
    "typescript": "^4.6.3",
    "webpack": "^5.71.0"
  },
  "engines": {
    "node": ">= 16"
  }
}
